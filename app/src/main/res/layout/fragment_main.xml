<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.psq.myjetpck.viewmodel.MainViewModel" />
    </data>


    <com.gturedi.views.StatefulLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/statefulLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_get_users"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="获取用户数据" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.result.toString()}"
                    tools:text="测试数据" />

            </ScrollView>

        </LinearLayout>

    </com.gturedi.views.StatefulLayout>

</layout>