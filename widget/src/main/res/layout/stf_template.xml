<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/stContainer"
        style="@style/stfContainer"
        android:visibility="gone"
        tools:visibility="visible">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/stProgress"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_fileName="lottie/cat_black.json" />

        <ImageView
            android:id="@+id/stImage"
            style="@style/stfImage"
            android:src="@drawable/stf_ic_error" />

        <TextView
            android:id="@+id/stMessage"
            style="@style/stfMessage"
            android:text="@string/stfErrorMessage" />

        <Button
            android:id="@+id/stButton"
            style="@style/stfButton"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:text="@string/stfButtonText"
            android:textStyle="bold" />

    </LinearLayout>

</merge>